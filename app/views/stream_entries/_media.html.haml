.media-item
  = link_to media.remote_url.blank? ? media.file.url(:original) : media.remote_url, style: media.image? ? "background-image: url(#{media.file.url(:original)})" : media.unknown? ? "background-image: url(#{media.remote_url})" : "", target: '_blank', rel: 'noopener', class: "u-#{media.video? || media.gifv? ? 'video' : 'photo'}" do
    - unless media.image? || media.unknown?
      %video{ src: media.file.url(:original), autoplay: true, loop: true }/
